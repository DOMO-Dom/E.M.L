<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" style="-fx-background-color: #2C2C3E; -fx-border-color: #ED4245; -fx-background-radius: 10 10 0 0; -fx-border-radius: 10 10 0 0;" stylesheets="@../css/Login.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="resources.controllers.ConsoleLog">
   <top>
      <HBox fx:id="TitleBar" alignment="CENTER_LEFT" prefHeight="25.0" style="-fx-background-color: #282839; -fx-background-radius: 10 10 0 0;" stylesheets="@../css/Login.css">
         <children>
            <HBox alignment="CENTER_LEFT" stylesheets="@../css/Login.css">
               <children>
                  <Label text="Console Log">
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                     <textFill>
                        <LinearGradient endX="1.0" endY="1.0">
                           <stops>
                              <Stop>
                                 <color>
                                    <Color red="1.0" />
                                 </color>
                              </Stop>
                              <Stop offset="1.0">
                                 <color>
                                    <Color red="1.0" green="1.0" blue="1.0" />
                                 </color>
                              </Stop>
                           </stops>
                        </LinearGradient>
                     </textFill>
                     <graphic>
                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../img/ApplicationProtoLogo.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Label>
               </children>
            </HBox>
            <Pane stylesheets="@../css/Login.css" HBox.hgrow="ALWAYS" />
            <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" stylesheets="@../css/Login.css">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
               <children>
                  <Button id="Min_MaxButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#Minimize" style="-fx-background-color: #282839;" stylesheets="@../css/Login.css" text="" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font name="Marlett" size="12.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button id="Min_MaxButton" fx:id="MinMaxButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#Maximize" style="-fx-background-color: #282839;" stylesheets="@../css/Login.css" text="" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font name="Marlett" size="12.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button id="CloseButton" alignment="CENTER" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" onMouseClicked="#Close" stylesheets="@../css/Login.css" text="" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font name="Marlett" size="12.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
            </HBox>
         </children>
         <cursor>
            <Cursor fx:constant="MOVE" />
         </cursor>
         <effect>
            <DropShadow />
         </effect>
      </HBox>
   </top>
   <bottom>
      <Pane prefHeight="5.0" style="-fx-background-color: #ED4245;" stylesheets="@../css/Login.css" BorderPane.alignment="CENTER" />
   </bottom>
   <center>
      <HBox alignment="CENTER" stylesheets="@../css/Login.css" BorderPane.alignment="CENTER">
         <children>
            <TextArea fx:id="consoleLogText" editable="false" prefHeight="200.0" prefWidth="450.0" promptText="Non SQL SB acount: user, user | admin, admin                                                         SQL DB account: sqluser, sqluser | sqladmin, sqladmin" wrapText="true" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </center>
</BorderPane>
